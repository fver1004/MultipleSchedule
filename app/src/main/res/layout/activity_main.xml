<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2173a0"
    android:orientation="horizontal"
    tools:context="io.github.fver1004.schedule.MainActivity">

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


            <Button
                android:id="@+id/startoption1"
                android:background="#2183b0"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="학년별 수업 - 복합 시간표 짜기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </Space>


            <Button
                android:id="@+id/startoption2"
                android:background="#2183b0"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장된 시간표 열기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />








    </LinearLayout>



</LinearLayout>
